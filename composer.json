{
    "name": "php-http/adapter-integration-tests",
    "description": "Adapter integration tests",
    "license": "MIT",
    "keywords": ["http", "integration", "tests"],
    "homepage": "http://php-http.org",
    "authors": [
        {
            "name": "Eric GELOEN",
            "email": "geloen.eric@gmail.com"
        }
